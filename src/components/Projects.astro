---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Go from "./icons/Go.astro"
import Framework from "./icons/Framework.astro"
import Bootstrap from "./icons/Bootstrap.astro"
import Docker from "./icons/Docker.astro"
import Spring from "./icons/Spring.astro"
import Angular from "./icons/Angular.astro"
import React from "./icons/React.astro"
import Firebase from "./icons/Firebase.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  GO: {
    name: "Go",
    class: "bg-[#50B7E0] text-white",
    icon: Go,
  },
  SVELTE: {
    name: "Svelte",
    class: "bg-[#1A1A1A] text-white",
    icon: Framework,
  },
  BOOTSTRAP: {
    name: "Bootstrap",
    class: "bg-[#7E13F8] text-white",
    icon: Bootstrap,
  },
  DOCKER: {
    name: "Docker",
    class: "bg-[#008fe2] text-white",
    icon: Docker,
  },
  SPRING: {
    name: "Spring",
    class: "bg-[#68bd45] text-white",
    icon: Spring,
  },
  ANGULAR: {
    name: "Angular",
    class: "bg-[#000] text-white",
    icon: Angular,
  },
  REACT: {
    name: "React",
    class: "bg-[#23272FF2] text-white",
    icon: React,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-[#37474f] text-white",
    icon: Firebase,
  },
}
const PROJECTS = [
  {
    title: "FireClub - E-commerce",
    description:
      "Plataforma digital de E-commerce centrada en ofrecer productos a precios competitivos, enfocado a un esquema de comisiones por afilación. Creada desde cero con Go, Svelte, MySQL, Aliyun Cloud, Docker, Zitadel y Bootstrap.",
    link: "https://public-gold.vercel.app/",
    image: "/projects/ecommerce.webp",
    tags: [TAGS.GO, TAGS.SVELTE, TAGS.DOCKER, TAGS.BOOTSTRAP],
  },
  {
    title: "FireClub - Registro comercios",
    description:
      "Landing page y registro de comercios, proveedores del E-commerce de FireClub. Creada desde cero con Go, Svelte, MySQL, Aliyun Cloud, Docker, Zitadel y Bootstrap.",
    link: "https://newshop.fireclub.world/",
    image: "/projects/landing.webp",
    tags: [TAGS.GO, TAGS.SVELTE, TAGS.BOOTSTRAP],
  },
  {
    title: "FireClub - Sistema afiliados",
    description:
      "Sistema para usuarios afiliados a Fireclub, creación de tiendas online, esquema de comisiones. Creada desde cero con Go, Svelte, MySQL, Aliyun Cloud, Docker, Zitadel y Bootstrap.",
    link: "https://market-ruby.vercel.app/login",
    image: "/projects/market.webp",
    tags: [TAGS.GO, TAGS.SVELTE, TAGS.DOCKER, TAGS.BOOTSTRAP],
  },
  {
    title: "Sistema CSC - ClickSoft",
    description:
      "Sistema para soporte en registro de incidencias en facturación de clientes de la empresa FEMSA OXXO. Creado desde cero con Spring Boot, Spring Security, JWT, Angular, Oracle DB y Bootstrap.",
    link: "https://youtu.be/4ltxmOo9eW0",
    github: "https://github.com/CarlosJair117/CSC-Spring",
    image: "/projects/CSC.webp",
    tags: [TAGS.SPRING, TAGS.ANGULAR, TAGS.BOOTSTRAP],
  },
  {
    title: "Torrecilla - Página promocional para cliente",
    description:
      "Página web promocional de servicios de Torrecilla, empresa de soluciones Eléctricas. Creada desde cero con React JS, Bootstrap.",
    link: "https://extraordinary-melomakarona-torrecilla.netlify.app/",
    github: "https://github.com/CarlosJair117/torrecilla",
    image: "/projects/torrecilla.webp",
    tags: [TAGS.REACT, TAGS.BOOTSTRAP],
  },
  {
    title: "Sistema de inventario Enince",
    description:
      "Sistema web para llevar control de inventario de productos generales de la empresa como productos de plásticos y embalajes. Creada desde cero con React JS, Firebase  y Bootstrap.",
    link: "https://inventario-enince.netlify.app/",
    github: "https://github.com/CarlosJair117/inventario-enince",
    image: "/projects/sistemaEnince.webp",
    tags: [TAGS.REACT, TAGS.BOOTSTRAP, TAGS.FIREBASE],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="img" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



